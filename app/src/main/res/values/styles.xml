<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EntranceButton">
        <item name="android:layout_width">@dimen/app_size300</item>
        <item name="android:layout_height">@dimen/app_size60</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- RadioButton的样式抽取-->
    <style name="radioButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rb_colors_selector</item>
    </style>

    <!--6-8人桌、WiFi、刷卡-->
    <style name="HottodayCuisineTagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/app_color_hottoday_txtbg_crimson</item>
        <item name="android:paddingBottom">@dimen/app_size3</item>
        <item name="android:paddingLeft">@dimen/app_size7</item>
        <item name="android:paddingRight">@dimen/app_size7</item>
        <item name="android:paddingTop">@dimen/app_size3</item>
        <item name="android:textColor">@color/app_color_white</item>
        <item name="android:textSize">@dimen/app_txt_size15</item>
    </style>

</resources>
