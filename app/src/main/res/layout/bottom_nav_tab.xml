<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_nav_tab"
        android:layout_width="@dimen/app_size25"
        android:layout_height="@dimen/app_size25"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/home_selected" />

    <TextView
        android:id="@+id/tv_nav_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_size3"
        android:text="首页"
        android:textColor="@color/app_color_gray"
        android:textSize="@dimen/app_txt_size12" />
</LinearLayout>
