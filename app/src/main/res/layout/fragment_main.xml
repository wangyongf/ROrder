<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_white_smoke"
        android:orientation="vertical">

        <!--Carousel-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_size170"
            android:background="@color/app_color_white">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carousel_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:animateOnBoundary="true"
                app:autoPlay="true"
                app:fillColor="#FFFFFFFF"
                app:indicatorGravity="bottom|center_horizontal"
                app:pageColor="#00000000"
                app:pageTransformInterval="1500"
                app:pageTransformer="zoom"
                app:radius="@dimen/app_size4"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size10"
            android:background="@color/app_color_white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/app_size15"
            android:paddingTop="@dimen/app_size15">

            <!--排队取号-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/app_size50"
                    android:layout_height="@dimen/app_size50"
                    android:src="@drawable/fragment_main_line_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size10"
                    android:text="排队取号"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size8"
                    android:text="餐厅取号不用等待"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12" />
            </LinearLayout>

            <!--预约订座-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/app_size50"
                    android:layout_height="@dimen/app_size50"
                    android:src="@drawable/fragment_main_appointment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size10"
                    android:text="预约订座"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size8"
                    android:text="订座一秒成功不用等"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12" />
            </LinearLayout>

            <!--扫描号单-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/app_size50"
                    android:layout_height="@dimen/app_size50"
                    android:src="@drawable/fragment_main_scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size10"
                    android:text="扫描号单"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size8"
                    android:text="随时掌握排队进展"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12" />
            </LinearLayout>
        </LinearLayout>

        <!--立即预约-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size10"
            android:background="@color/app_color_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_size8"
            android:paddingLeft="@dimen/app_size10"
            android:paddingRight="@dimen/app_size10"
            android:paddingTop="@dimen/app_size8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/app_size3"
                    android:layout_height="@dimen/app_size15"
                    android:background="@color/app_color_bright_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_size8"
                    android:gravity="center"
                    android:text="立即预约"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可预约桌位看得见"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size8"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/app_size40"
                    android:layout_weight="3"
                    android:background="@color/app_color_gray"
                    android:focusableInTouchMode="false"
                    android:hint="3月2日 今天 18:00 4人"
                    android:paddingBottom="@dimen/app_size8"
                    android:paddingTop="@dimen/app_size8"
                    android:textSize="@dimen/app_txt_size15" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/app_size40"
                    android:layout_marginLeft="@dimen/app_size8"
                    android:layout_weight="1"
                    android:background="@color/app_color_bright_red"
                    android:text="预约"
                    android:textColor="@color/app_color_white"
                    android:textSize="@dimen/app_txt_size18" />
            </LinearLayout>
        </LinearLayout>

        <!--当前位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size10"
            android:background="@color/app_color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/app_size12"
            android:paddingLeft="@dimen/app_size10"
            android:paddingRight="@dimen/app_size10"
            android:paddingTop="@dimen/app_size12">

            <ImageView
                android:layout_width="@dimen/app_size18"
                android:layout_height="@dimen/app_size18"
                android:src="@drawable/fragment_main_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_size8"
                android:text="距离本店还有"
                android:textColor="@color/app_color_black"
                android:textSize="@dimen/app_txt_size15" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="673m"
                android:textColor="@color/app_color_gray"
                android:textSize="@dimen/app_txt_size13" />

            <ImageView
                android:layout_width="@dimen/app_size13"
                android:layout_height="@dimen/app_size13"
                android:layout_marginLeft="@dimen/app_size8"
                android:src="@drawable/fragment_main_arrow_right" />
        </LinearLayout>

        <!--今日优惠-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size10"
            android:background="@color/app_color_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_size8"
            android:paddingLeft="@dimen/app_size10"
            android:paddingRight="@dimen/app_size10"
            android:paddingTop="@dimen/app_size8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/app_size3"
                    android:layout_height="@dimen/app_size15"
                    android:background="@color/app_color_bright_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_size8"
                    android:gravity="center"
                    android:text="今日优惠"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/app_size12"
                    android:layout_height="@dimen/app_size12"
                    android:src="@drawable/information" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_size5"
                    android:text="活动说明"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_size5"
                android:layout_marginTop="@dimen/app_size10"
                android:background="@color/app_color_white_smoke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/app_size100"
                        android:layout_height="@dimen/app_size80"
                        android:layout_marginTop="@dimen/app_size5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size15"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="辣年青春美蛙鱼头火锅100元代金券"
                            android:textColor="@color/app_color_black"
                            android:textSize="@dimen/app_txt_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_size5"
                            android:text="代金券"
                            android:textColor="@color/app_color_gray"
                            android:textSize="@dimen/app_txt_size13" />

                        <!--优惠券的标签-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_size8"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/app_color_coupon_txtbg_oldlace"
                                android:text="7店通用"
                                android:textColor="@color/app_color_coupon_txt_coral"
                                android:textSize="@dimen/app_txt_size12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/app_size10"
                                android:background="@color/app_color_coupon_txtbg_oldlace"
                                android:text="鱼火锅"
                                android:textColor="@color/app_color_coupon_txt_coral"
                                android:textSize="@dimen/app_txt_size12" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_size0.5"
                    android:layout_marginTop="@dimen/app_size8"
                    android:background="@color/app_color_divider" />

                <!--随时退、过期退-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/app_size13"
                        android:layout_height="@dimen/app_size13"
                        android:src="@drawable/fragment_main_coupon_hook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:text="随时退"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size12" />

                    <ImageView
                        android:layout_width="@dimen/app_size13"
                        android:layout_height="@dimen/app_size13"
                        android:layout_marginLeft="@dimen/app_size8"
                        android:src="@drawable/fragment_main_coupon_hook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:text="过期退"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_coupon_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_coupon_original_price"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size14" />

                    <Button
                        android:layout_width="@dimen/app_size70"
                        android:layout_height="@dimen/app_size30"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:background="@color/app_color_bright_red"
                        android:text="￥100抢"
                        android:textColor="@color/app_color_white" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_size5"
                android:layout_marginTop="@dimen/app_size10"
                android:background="@color/app_color_white_smoke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/app_size100"
                        android:layout_height="@dimen/app_size80"
                        android:layout_marginTop="@dimen/app_size5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size15"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="百岁我家酸菜鱼50元代金券"
                            android:textColor="@color/app_color_black"
                            android:textSize="@dimen/app_txt_size16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_size5"
                            android:text="代金券"
                            android:textColor="@color/app_color_gray"
                            android:textSize="@dimen/app_txt_size13" />

                        <!--优惠券的标签-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_size8"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/app_color_coupon_txtbg_oldlace"
                                android:text="7店通用"
                                android:textColor="@color/app_color_coupon_txt_coral"
                                android:textSize="@dimen/app_txt_size12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/app_size10"
                                android:background="@color/app_color_coupon_txtbg_oldlace"
                                android:text="鱼火锅"
                                android:textColor="@color/app_color_coupon_txt_coral"
                                android:textSize="@dimen/app_txt_size12" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_size0.5"
                    android:layout_marginTop="@dimen/app_size8"
                    android:background="@color/app_color_divider" />

                <!--随时退、过期退-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_size8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/app_size13"
                        android:layout_height="@dimen/app_size13"
                        android:src="@drawable/fragment_main_coupon_hook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:text="随时退"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size12" />

                    <ImageView
                        android:layout_width="@dimen/app_size13"
                        android:layout_height="@dimen/app_size13"
                        android:layout_marginLeft="@dimen/app_size8"
                        android:src="@drawable/fragment_main_coupon_hook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:text="过期退"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_coupon_original_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_coupon_original_price"
                        android:textColor="@color/app_color_gray"
                        android:textSize="@dimen/app_txt_size14" />

                    <Button
                        android:layout_width="@dimen/app_size70"
                        android:layout_height="@dimen/app_size30"
                        android:layout_marginLeft="@dimen/app_size5"
                        android:background="@color/app_color_bright_red"
                        android:text="￥30抢"
                        android:textColor="@color/app_color_white" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_size5"
                android:layout_marginTop="@dimen/app_size8"
                android:background="@color/app_color_white_smoke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_size40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_size8"
                android:background="@color/app_color_white"
                android:gravity="center"
                android:text="查看更多优惠"
                android:textSize="@dimen/app_txt_size15" />
        </LinearLayout>

        <!--今日热门-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size10"
            android:background="@color/app_color_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_size8"
            android:paddingLeft="@dimen/app_size10"
            android:paddingRight="@dimen/app_size10"
            android:paddingTop="@dimen/app_size8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/app_size3"
                    android:layout_height="@dimen/app_size15"
                    android:background="@color/app_color_bright_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_size8"
                    android:gravity="center"
                    android:text="今日热门"
                    android:textColor="@color/app_color_black"
                    android:textSize="@dimen/app_txt_size15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可预约桌位看得见"
                    android:textColor="@color/app_color_gray"
                    android:textSize="@dimen/app_txt_size12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
