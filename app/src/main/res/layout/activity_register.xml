<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="@dimen/app_size90"
        android:layout_height="@dimen/app_size90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_size30"
        android:src="@drawable/playstore_icon" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:layout_marginTop="@dimen/app_size30"
        android:hint="请输入用户名"
        app:met_iconLeft="@drawable/account_login" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:hint="请输入邮箱"
        app:met_iconLeft="@drawable/mail_login" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:hint="请输入密码"
        app:met_iconLeft="@drawable/password_login" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_size50"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:layout_marginTop="@dimen/app_size15"
        android:background="@color/app_color_login_blue"
        android:text="@string/app_text_register"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_txt_size18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:layout_marginTop="@dimen/app_size15">

        <TextView
            android:id="@+id/tv_back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/back_to_login_page"
            android:textColor="@color/app_color_login_gray"
            android:textSize="@dimen/app_size15" />
    </RelativeLayout>
</LinearLayout>
