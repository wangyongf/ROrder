<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/about_activity"
            style="@style/EntranceButton"
            android:text="AboutActivity" />

        <Button
            android:id="@+id/entrance_activity"
            style="@style/EntranceButton"
            android:text="EntranceActivity" />

        <Button
            android:id="@+id/feedback_activity"
            style="@style/EntranceButton"
            android:text="FeedbackActivity" />

        <Button
            android:id="@+id/find_pwd_activity"
            style="@style/EntranceButton"
            android:text="FindPwdActivity" />

        <Button
            android:id="@+id/login_activity"
            style="@style/EntranceButton"
            android:text="LoginActivity" />

        <Button
            android:id="@+id/main_activity"
            style="@style/EntranceButton"
            android:text="MainActivity" />

        <Button
            android:id="@+id/register_activity"
            style="@style/EntranceButton"
            android:text="RegisterActivity" />

        <Button
            android:id="@+id/account_activity"
            style="@style/EntranceButton"
            android:text="AccountActivity" />

        <Button
            android:id="@+id/splash_activity"
            style="@style/EntranceButton"
            android:text="SplashActivity" />

        <Button
            android:id="@+id/setting_activity"
            style="@style/EntranceButton"
            android:text="SettingActivity" />

        <Button
            android:id="@+id/order_activity"
            style="@style/EntranceButton"
            android:text="OrderActivity" />
    </LinearLayout>
</ScrollView>
