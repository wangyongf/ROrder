<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yongf.rorder.widget.TitleLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tl_rightMode="none"
        app:tl_titleText="手机号登录" />

    <ImageView
        android:layout_width="@dimen/app_size90"
        android:layout_height="@dimen/app_size90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_size30"
        android:src="@drawable/playstore_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:layout_marginTop="@dimen/app_size30"
        android:orientation="horizontal">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:hint="请输入手机号"
            android:inputType="phone"
            app:met_iconLeft="@drawable/account_login" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/app_color_login_blue"
            android:textSize="@dimen/app_txt_size17" />
    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:hint="请输入验证码"
        android:inputType="number"
        app:met_iconLeft="@drawable/password_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_size50"
        android:layout_marginLeft="@dimen/app_size16"
        android:layout_marginRight="@dimen/app_size16"
        android:layout_marginTop="@dimen/app_size15"
        android:background="@color/app_color_login_blue"
        android:text="@string/app_text_login"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_txt_size18" />
</LinearLayout>
