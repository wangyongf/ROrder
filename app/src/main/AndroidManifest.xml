<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yongf.rorder">

    <!--permissions-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--SMSSDK-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--SMSSDK-->

    <application
        android:name=".app.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.activity.LoginActivity"
            android:launchMode="singleTask">

        </activity>
        <activity android:name=".app.activity.SplashActivity">

        </activity>
        <activity android:name=".app.activity.MainActivity"></activity>
        <activity
            android:name=".app.activity.RegisterActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".app.activity.FindPwdActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".app.activity.AboutActivity" />
        <activity android:name=".app.activity.AccountActivity" />
        <activity android:name=".app.activity.SettingActivity" />
        <activity android:name=".app.activity.OrderActivity" />
        <activity android:name=".app.activity.FeedbackActivity" />
        <activity android:name=".app.activity.SlideLayoutActivity" />
        <activity android:name=".app.activity.InputPhoneActivity" />
        <activity android:name=".app.activity.InputEmailActivity" />
        <activity android:name=".app.activity.SearchActivity" />
        <activity android:name=".app.activity.OrderTempActivity" />
        <activity android:name=".app.activity.PhoneLoginActivity" />
        <activity android:name=".app.activity.ShoppingCartActivity" />
        <activity android:name=".app.activity.MyMainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.activity.MyOrderActivity" />
        <activity android:name=".app.activity.OrderDetailActivity" />

        <!--Entrance-->
        <activity android:name=".app.activity.EntranceActivity">

        </activity>

        <!--SMSSDK-->
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>
